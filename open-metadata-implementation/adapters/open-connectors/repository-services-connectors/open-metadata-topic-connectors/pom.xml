    <name>Open Metadata Topic Connectors</name>
    <description>
        The open metadata topic connectors are connectors that support
        the OMRS Topic used for asynchronous event passing between members of
        an open metadata repository cohort.
    </description>

    <artifactId>open-metadata-topic-connectors</artifactId>
    <packaging>pom</packaging>
    <modules>
        <module>kafka-omrs-topic-connector</module>
        <module>inmemory-omrs-topic-connector</module>
    </modules>

