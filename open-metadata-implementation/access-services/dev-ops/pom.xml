    <modelVersion>4.0.0</modelVersion>

    <name>DevOps OMAS</name>
    <description>
        The DevOps Open Metadata Access Service (OMAS) provides APIs and events for tools that play a role in a
        DevOps pipeline.  It enables these tools to query information about the assets it
        is deploying, the infrastructure options and any governance actions that need
        to be performed.
    </description>

    <artifactId>dev-ops</artifactId>
    <packaging>pom</packaging>
    <modules>
        <module>dev-ops-api</module>
        <module>dev-ops-client</module>
        <module>dev-ops-server</module>
        <module>dev-ops-spring</module>
    </modules>

</project>
