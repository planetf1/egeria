<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <id>deploy</id>
    <baseDirectory>egeria-deploy-${open-metadata.version}</baseDirectory>
    <fileSets>

        <!-- Copy the tutorial notebooks -->
        <fileSet>
            <directory>../../open-metadata-resources/open-metadata-labs</directory>
            <outputDirectory>./notebooks</outputDirectory>
            <includes>
                <include>**/*.ipynb</include>
                <include>**/*.md</include>
                <include>**/resources/**</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- Copy the helm charts -->
        <fileSet>
            <directory>../../open-metadata-resources/open-metadata-deployment/charts</directory>
            <outputDirectory>./charts</outputDirectory>
            <excludes>
                <exclude>**/charts/**</exclude>
                <exclude>**/*.lock</exclude>
                <exclude>**/*.swp</exclude>
            </excludes>

            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- Copy the docker compose definitions -->
        <fileSet>
            <directory>../../open-metadata-resources/open-metadata-deployment/compose</directory>
            <outputDirectory>./docker-compose</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

    </fileSets>
</assembly>
