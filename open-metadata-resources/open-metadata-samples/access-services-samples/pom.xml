<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>open-metadata-samples</artifactId>
        <groupId>org.odpi.egeria</groupId>
        <version>1.1-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <name>Access Services Samples</name>
    <description>
        Samples showing how to call the Open Metadata Access Services (OMASs) clients.
    </description>

    <artifactId>access-services-samples</artifactId>

    <packaging>pom</packaging>
    <modules>
        <module>asset-management-samples</module>
        <module>governance-program-client-samples</module>
        <module>subject-area-client-samples</module>
    </modules>

    <dependencies>

        <!-- Including this dependency defines the log4J library used by the sample clients. -->
        <!-- Adding any of the modules below this pom file in the servers will cause a -->
        <!-- multiple SLF4J bindings failure in the start up of the server.  -->
        <!-- See https://www.slf4j.org/codes.html#multiple_bindings  -->

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>

    </dependencies>

</project>